# Kiroku Bot environment
# Copy to .env and fill values.

# Discord bot token from Discord Developer Portal
DISCORD_TOKEN=

# Command prefix used in admin chat
BOT_COMMAND_PREFIX=!kiroku

# Comma-separated admin channel IDs where commands are accepted
# Example: ADMIN_CHANNEL_IDS=123456789012345678,234567890123456789
ADMIN_CHANNEL_IDS=

# Comma-separated Discord user IDs allowed to run mutating commands
# If empty, mutating commands are allowed for anyone in ADMIN_CHANNEL_IDS (bootstrap mode).
# Example: ALLOWED_USER_IDS=111111111111111111,222222222222222222
ALLOWED_USER_IDS=

# Optional weekly update post channel
WEEKLY_POST_CHANNEL_ID=
ENABLE_WEEKLY_EVENTS=false

# Local repository path and task store
REPO_PATH=.
TASKS_FILE=.kiroku/tasks.json

# Git workflow settings
BASE_BRANCH=main
GIT_REMOTE=origin

# Optional verification command run during apply step
# VERIFY_COMMAND=python -m py_compile bot.py codeops.py
VERIFY_COMMAND=

# Optional model settings for auto plan/diff generation
# Required for !kiroku diff / !kiroku run
# If both are set, Anthropic is preferred by default.
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_VERSION=2023-06-01
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Outreach ops (lead generation + email drafting/sending)
# Configure these to enable: !kiroku outreach ...
OUTREACH_STATE_DIR=.kiroku/outreach

# Search provider for lead generation: serpapi | bing
SEARCH_PROVIDER=
SERPAPI_API_KEY=
BING_SEARCH_API_KEY=

# Email drafting variables (used to fill templates)
OUTREACH_SENDER_NAME=
OUTREACH_SENDER_TITLE=
OUTREACH_SENDER_EMAIL=
OUTREACH_CALENDAR_LINK=
OUTREACH_SPONSORSHIP_PAGE_URL=
OUTREACH_COHORT_DATE_WINDOW=
OUTREACH_COHORT_CITY=Tokyo

# SMTP settings (recommended: Gmail app password)
OUTREACH_SEND_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
