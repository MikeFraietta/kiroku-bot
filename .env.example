# Kiroku Bot environment
# Copy to .env and fill values.

# Discord bot token from Discord Developer Portal
DISCORD_TOKEN=

# Command prefix used in admin chat
BOT_COMMAND_PREFIX=!kiroku

# Comma-separated admin channel IDs where commands are accepted
# Example: ADMIN_CHANNEL_IDS=123456789012345678,234567890123456789
ADMIN_CHANNEL_IDS=

# Comma-separated Discord user IDs allowed to run mutating commands
# If empty, mutating commands are allowed for anyone in ADMIN_CHANNEL_IDS (bootstrap mode).
# Example: ALLOWED_USER_IDS=111111111111111111,222222222222222222
ALLOWED_USER_IDS=

# Optional weekly update post channel
WEEKLY_POST_CHANNEL_ID=
ENABLE_WEEKLY_EVENTS=false

# Local repository path and task store
REPO_PATH=.
TASKS_FILE=.kiroku/tasks.json

# Git workflow settings
BASE_BRANCH=main
GIT_REMOTE=origin

# Optional verification command run during apply step
# VERIFY_COMMAND=python -m py_compile bot.py codeops.py
VERIFY_COMMAND=

# Optional model settings for auto plan/diff generation
# Required for !kiroku diff / !kiroku run
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=https://api.openai.com/v1
